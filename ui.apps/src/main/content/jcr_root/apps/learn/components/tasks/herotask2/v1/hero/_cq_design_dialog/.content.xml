<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          extraClientlibs="[core.wcm.components.teaser.v1.design]"
          jcr:title="Teaser task2"
          helpPath="https://www.adobe.com/go/aem_cmp_teaser_v1"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            granite:class="cmp-teaser__design"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured"
                  maximized="{Boolean}true"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">

                    <main jcr:primaryType="nt:unstructured"
                                margin="{Boolean}true"
                                jcr:title="Teaser"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">

                            <actions
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="coral-Form-fieldwrapper"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <label
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="coral-Form-fieldlabel"
                                            text="Call-To-Actions"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                    <actionsDisabled
                                            jcr:primaryType="nt:unstructured"
                                            name="./actionsDisabled"
                                            text="Disable Call-To-Actions"
                                            value="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"/>
                                </items>
                            </actions>

                            <elements
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="coral-Form-fieldwrapper"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <label
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="coral-Form-fieldlabel"
                                            text="Elements"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            name="./titleHidden"
                                            text="Hide title"
                                            value="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"/>
                                    <description
                                            jcr:primaryType="nt:unstructured"
                                            name="./descriptionHidden"
                                            text="Hide description"
                                            value="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"/>
                                </items>
                            </elements>

                            <type
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Title Type"
                                    granite:class="foundation-toggleable"
                                    name="./titleType"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select">
                                <items jcr:primaryType="nt:unstructured">
                                    <def
                                            jcr:primaryType="nt:unstructured"
                                            value=""
                                            text="(default)"/>
                                    <h1
                                            jcr:primaryType="nt:unstructured"
                                            text="H1"
                                            value="h1"/>
                                    <h2
                                            jcr:primaryType="nt:unstructured"
                                            text="H2"
                                            value="h2"/>
                                    <h3
                                            jcr:primaryType="nt:unstructured"
                                            text="H3"
                                            value="h3"/>
                                    <h4
                                            jcr:primaryType="nt:unstructured"
                                            text="H4"
                                            value="h4"/>
                                    <h5
                                            jcr:primaryType="nt:unstructured"
                                            text="H5"
                                            value="h5"/>
                                    <h6
                                            jcr:primaryType="nt:unstructured"
                                            text="H6"
                                            value="h6"/>
                                </items>
                            </type>

                            <links
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="coral-Form-fieldwrapper"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <label
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="coral-Form-fieldlabel"
                                            text="Links"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                    <image
                                            jcr:primaryType="nt:unstructured"
                                            name="./imageLinkHidden"
                                            text="Don't link the image"
                                            value="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"/>
                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            name="./titleLinkHidden"
                                            text="Don't link the title"
                                            value="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"/>
                                </items>
                            </links>

                            <imageDelegate
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="coral-Form-fieldwrapper"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <label
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="coral-Form-fieldlabel"
                                            text="Image Delegate"
                                            sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                    <text
                                            jcr:primaryType="nt:unstructured"
                                            text="Image rendering is delegated to the ${imageDelegate.title} component."
                                            sling:resourceType="granite/ui/components/coral/foundation/text"/>
                                </items>
                                <granite:rendercondition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="core/wcm/components/renderconditions/imagedelegate"/>
                            </imageDelegate>

                        </items>
                    </main>

                    <styletab jcr:primaryType="nt:unstructured"
                           path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_design/styletab"
                           sling:resourceType="granite/ui/components/coral/foundation/include">
                    </styletab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
